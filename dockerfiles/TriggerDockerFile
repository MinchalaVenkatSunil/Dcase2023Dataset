# Use the official Python image
FROM python:3.9-alpine

# Set the working directory
WORKDIR /app

# Copy the requirements file into the container
COPY requirements.txt .
COPY newtestproject-405920-4be1a3498a32.json .

# Install required packages
RUN pip install --no-cache-dir \
    pandas \
    google-cloud-storage

# Copy the application code into the container
COPY scripts/Trigger.py .

# Set the environment variable for Google Cloud Storage credentials
ENV GOOGLE_APPLICATION_CREDENTIALS=/app/newtestproject-405920-4be1a3498a32.json

EXPOSE 8080 

# Run the application
CMD ["python", "Trigger.py"]
