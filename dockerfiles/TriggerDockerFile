# Use the official Python image
FROM google/cloud-sdk:latest

# Set the working directory
WORKDIR /app

# Copy the requirements file into the container
COPY requirements.txt .
COPY newtestproject-405920-4be1a3498a32.json .

# Install required dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install the Google Cloud SDK
RUN curl https://dl.google.com/dl/cloudsdk/channels/rapid/google-cloud-sdk.tar.gz -o /tmp/google-cloud-sdk.tar.gz \
    && tar -xvf /tmp/google-cloud-sdk.tar.gz -C /usr/local \
    && /usr/local/google-cloud-sdk/install.sh

# Copy the application code into the container
COPY scripts/Trigger.py .

# Set the environment variable for Google Cloud Storage credentials
ENV GOOGLE_APPLICATION_CREDENTIALS=/app/newtestproject-405920-4be1a3498a32.json

# Run the application
CMD ["python", "Trigger.py"]
